<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNav"
        android:fillViewport="true"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="12dp">

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_settings"
                    android:layout_alignParentStart="true"
                    android:contentDescription="@string/settings_icon_desc" />

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hi_wadiha_boat"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/btnSearch"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:src="@drawable/ic_search"
                    android:layout_alignParentEnd="true"
                    android:contentDescription="@string/search_icon_desc" />
            </RelativeLayout>

            <!-- Campus Banner -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/campusImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/campus_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/campus_image" />

                <TextView
                    android:id="@+id/bannerText"
                    android:layout_width="179dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:background="#80000000"
                    android:padding="12dp"
                    android:text="@string/creative_thinking_critical_thinking_newworldthinking"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Student Nav Heading -->
            <TextView
                android:id="@+id/studentNavTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/student_nav_title"
                android:textStyle="bold"
                android:textSize="28sp"
                android:textColor="@color/colligo_maroon"
                android:gravity="center"
                android:layout_marginTop="20dp" />

            <!-- Student Nav Grid (2x2) -->
            <GridLayout
                android:id="@+id/navGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp"
                android:columnOrderPreserved="false">

                <!-- Planner Card -->
                <LinearLayout
                    android:id="@+id/plannerCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_bg">

                    <ImageView
                        android:id="@+id/plannerImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="@string/planner_image"
                        android:src="@drawable/planner_img"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/plannerTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="PLANNER"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:background="@color/colligo_maroon" />
                </LinearLayout>

                <!-- Lost and Found Card -->
                <LinearLayout
                    android:id="@+id/lostFoundCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_bg">

                    <ImageView
                        android:id="@+id/lostFoundImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="@string/lost_found_image"
                        android:src="@drawable/lostfound_img"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/lostFoundTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LOST AND FOUND"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:background="@color/colligo_maroon" />
                </LinearLayout>

                <!-- Carpooling Card -->
                <LinearLayout
                    android:id="@+id/carpoolCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_bg">

                    <ImageView
                        android:id="@+id/carpoolImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="@string/carpool_image"
                        android:src="@drawable/carpool_img"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/carpoolTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CARPOOL"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:background="@color/colligo_maroon" />
                </LinearLayout>

                <!-- Campus Map Card -->
                <LinearLayout
                    android:id="@+id/mapCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:orientation="vertical"
                    android:layout_margin="8dp"
                    android:background="@drawable/card_bg">

                    <ImageView
                        android:id="@+id/mapImg"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:contentDescription="@string/map_image"
                        android:src="@drawable/map_img"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/mapTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="CAMPUS MAP"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:background="@color/colligo_maroon" />
                </LinearLayout>
            </GridLayout>

            <!-- Schedule Section -->
            <LinearLayout
                android:id="@+id/scheduleSection"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="16dp"
                android:background="@drawable/schedule_bg"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Left: RecyclerView for lectures -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/lectureRecycler"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:overScrollMode="never" />

                <!-- Right: Date Info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingStart="8dp"
                    android:paddingEnd="4dp">

                    <TextView
                        android:id="@+id/dayText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DAY"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/monthText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MONTH"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATE"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Reusable bottom nav include -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>