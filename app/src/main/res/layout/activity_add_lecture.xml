<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF0ED">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="36dp"
        app:cardElevation="16dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/colligo_maroon">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Back + Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/ic_back"
                        app:tint="@color/white"
                        android:layout_marginEnd="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Lecture"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Module Name -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white"
                    app:boxBackgroundColor="#33FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etModuleName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Module Name"
                        android:textColor="@color/white"
                        android:textColorHint="#FFCDD2"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Day + Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvDaySelect"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="Day Select"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:background="@drawable/rounded_stroke_white"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:layout_width="100dp"
                        android:layout_height="56dp"
                        android:text="08:00"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:background="@drawable/rounded_button_white"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:id="@+id/tvEndTime"
                        android:layout_width="100dp"
                        android:layout_height="56dp"
                        android:text="10:00"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:background="@drawable/rounded_button_white"/>
                </LinearLayout>

                <!-- Lecture Room -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white"
                    app:boxBackgroundColor="#33FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRoom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Lecture Room"
                        android:textColor="@color/white"
                        android:textColorHint="#FFCDD2"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Color Selector (Dynamic) -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:id="@+id/colorPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="8dp"/>
                </HorizontalScrollView>

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white"
                    app:boxBackgroundColor="#33FFFFFF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNotes"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:hint="Add Notes"
                        android:textColor="@color/white"
                        android:textColorHint="#FFCDD2"
                        android:gravity="top"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Add Button -->
                <Button
                    android:id="@+id/btnAddLecture"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Add Lecture"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#D65D7A"
                    android:background="@drawable/rounded_button_white"
                    app:elevation="8dp"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>